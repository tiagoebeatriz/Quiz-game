      cursor: pointer;
    }

    button:hover {
      background-color: #004999;
    }

    #question {
      font-size: 20px;
      margin-bottom: 20px;
    }

    .option {
      display: block;
      background-color: #e6f0ff;
      color: #333;
      border: 1px solid #ccc;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
      cursor: pointer;
    }

    .option:hover {
      background-color: #cce0ff;
    }

